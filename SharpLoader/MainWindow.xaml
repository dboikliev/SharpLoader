<Window x:Class="SharpLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SharpLoader.Views"
        xmlns:vm="clr-namespace:SharpLoader.ViewModels"
        Title="SharpLoader" 
        Name="mainWindow"
        WindowStyle="SingleBorderWindow"
        SnapsToDevicePixels="True"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
     <StackPanel>
         <StackPanel.DataContext>
             <vm:AllDownloadsViewModel/>
         </StackPanel.DataContext>
        <TextBox Name="TextBoxUrl"/>
        <Button CommandParameter="{Binding ElementName=TextBoxUrl, Path=Text}" Command="{Binding BeginDownload}" Content="Add"/>
        <ListView ItemsSource="{Binding Downloads}"/>
    </StackPanel>
</Window>
